<!-- booking_history.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Booking History</title>
</head>

<body>
  <h1>Booking History</h1>

  <% transactions.forEach(transaction => { %>
    <div class="transaction">
      <h2>Transaction ID: <%= transaction.transaction_id %></h2>
      <p>Booking Date: <%= transaction.booking_date %></p>
      <p>Status: <%= transaction.status %></p>
      <p>Discount: <%= transaction.discount %></p>
      <p>Total Amount: <%= transaction.total_amount %></p>

      <h3>Orders:</h3>
      <% transaction.orders.forEach(order => { %>
        <div class="order">
          <p>Order ID: <%= order.order_id %></p>
          <p>Flight Code: <%= order.flight_code %></p>
          <p>Type: <%= order.type %></p>
          <p>Price: <%= order.price %></p>
          <p>Quantity: <%= order.quantity %></p>
          <p>Total: <%= order.total %></p>
        </div>
      <% }); %>
    </div>
  <% }); %>
</body>

</html>

