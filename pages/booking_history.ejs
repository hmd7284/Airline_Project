<!DOCTYPE html>
<html>

  <head>
    <title>GDC Airways</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
      integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Pacifico|Paytone+One" rel="stylesheet">
    <link rel="stylesheet" href="admin/adminset.css">
    <style>
      #flash-message {
        position: fixed;
        top: 120px;
        right: 10px;
        z-index: 99999;
      }
    </style>
  </head>

  <body>

    <!--NavBar-->
    <nav class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <a href="/home_admin" class="navbar-brand"> GDC AIRWAYS</a>
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
            data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
          </button>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class=" nav navbar-nav">
            <li class="active"><a href="#"><strong>Home</strong></a></li>
            <li><a href="/user_about"><strong>About</strong></a></li>
            <li><a href="/user_contacts"><strong>Contacts</strong></a></li>
            <li><a href="/flight_search"><strong>Flight booking</strong></a></li>
            <li><a href="/booking_history"><strong>My Bookings</strong></a></li>re
            <!-- <li><a href="/fligh_page"><strong>Search `Flight</strong></a></li> -->
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="/user_profile"><strong>User Profile</strong></a></li>
            <li><a href="/user_logout"><strong>Logout</strong></a></li>
          </ul>

        </div>
      </div>
    </nav>
    <% if (message.success) { %>
      <div id="flash-message" class="alert alert-success" role="alert">
        <%= message.success %>
      </div>
      <% } else if (message.error) { %>
        <div id="flash-message" class="alert alert-danger" role="alert">
          <%= message.error %>
        </div>
        <% } %>
          <div class="flex-container">
            <div class="form-container">
              <form action="/booking_history" method="get">
                <h2>Booking History</h2>
                <input type="hidden" name="action" value="search">
                <label for="startDate">Starting Date:</label>
                <input type="date" id="startDate" name="startDate" required>
                <label for="endDate">Ending Date:</label>
                <input type="date" id="endDate" name="endDate" required>
                <button type="submit">Search</button>
              </form>
            </div>
            <div class="table-container">
              <div class="content-container">
                <table>
                  <h2>Transactions History</h2>
                  <thead>
                    <tr>
                      <th>Transaction ID</th>
                      <th>Transaction Information</th>
                      <th>Order ID</th>
                      <th>Flight code:</th>
                      <th>Type:</th>
                      <th>Price</th>
                      <th>Quantity</th>
                      <th>Total</th>
                      <th>Cancel Order</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% transactions.forEach(transaction=> { %>
                      <tr>
                        <td rowspan="<%= transaction.orders.length + 1 %>">
                          <%= transaction.transaction_id %>
                        </td>
                        <td rowspan="<%= transaction.orders.length + 1 %>">
                          Booking Date: <%= transaction.booking_date %><br>
                            Status: <%= transaction.status %><br>
                              Discount code: <%= transaction.discount %><br>
                                Total Amount: <%= transaction.total_amount %><br>
                                  <form action="/booking_history/cancel/<%= transaction.transaction_id %>"
                                    method="post">
                                    <button type="submit"
                                      onclick="return confirm('Are you sure you want to cancel this transaction?')">Cancel Transaction</button>
                                  </form>
                        </td>
                      </tr>
                      <% transaction.orders.forEach(order=> { %>
                        <tr>
                          <td>
                            <%= order.order_id %>
                          </td>
                          <td>
                            <%= order.flight_code %>
                          </td>
                          <td>
                            <%= order.type %>
                          </td>
                          <td>
                            <%= order.price %>
                          </td>
                          <td>
                            <%= order.quantity %>
                          </td>
                          <td>
                            <%= order.total %>
                          </td>
                          <!-- Add cancel button for each order -->
                          <td>
                            <form
                              action="/booking_history/cancel/order/<%= transaction.transaction_id %>/<%= order.order_id %>"
                              method="post">
                              <button type="submit"
                                onclick="return confirm('Are you sure you want to delete this order?')">Delete Order</button>
                            </form>
                          </td>
                        </tr>
                        <% }); %>
                          <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <script src="https://code.jquery.com/jquery-3.7.1.min.js"
            integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
          <script>
            $(document).ready(function () {
              $("#flash-message").delay(5000).fadeOut("slow");
            }); 
          </script>

  </body>

</html>
