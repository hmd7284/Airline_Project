<!-- booking_history.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Booking History</title>
</head>

<body>
  <h1>Booking History</h1>

  <!-- Search Form -->
  <form action="/booking_history" method="get">
    <label for="startDate">Start Date:</label>
    <input type="date" id="startDate" name="startDate" required>

    <label for="endDate">End Date:</label>
    <input type="date" id="endDate" name="endDate" required>

    <button type="submit">Search</button>
  </form>

  <% if (message.success) { %>
  <div class="alert alert-success" role="alert">
    <%= message.success %>
  </div>
  <% } else if (message.error) { %>
  <div class="alert alert-danger" role="alert">
    <%= message.error %>
  </div>
  <% } %>

  <!-- Booking History Table -->
  <div class="transaction-table">
    <table>
      <thead>
        <tr>
          <th>Transaction ID</th>
          <th>Booking Date</th>
          <th>Status</th>
          <th>Discount</th>
          <th>Total Amount</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% transactions.forEach(transaction => { %>
        <tr>
          <td><%= transaction.transaction_id %></td>
          <td><%= transaction.booking_date %></td>
          <td><%= transaction.status %></td>
          <td><%= transaction.discount %></td>
          <td><%= transaction.total_amount %></td>
          <td>
            <form action="/booking_history/cancel/<%= transaction.transaction_id %>" method="post">
              <button type="submit" onclick="return confirm('Are you sure you want to cancel this booking?')">Cancel</button>
            </form>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <!-- Detailed Order Information -->
  <% transactions.forEach(transaction => { %>
  <div class="order-details" id="order-details-<%= transaction.transaction_id %>">
    <h2>Order Details for Transaction ID: <%= transaction.transaction_id %></h2>
    <table>
      <thead>
        <tr>
          <th>Order ID</th>
          <th>Flight Code</th>
          <th>Type</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% transaction.orders.forEach(order => { %>
        <tr>
          <td><%= order.order_id %></td>
          <td><%= order.flight_code %></td>
          <td><%= order.type %></td>
          <td><%= order.price %></td>
          <td><%= order.quantity %></td>
          <td><%= order.total %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <% }); %>

  <script src="https://code.jquery.com/jquery-3.7.1.min.js"
    integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
  <!-- Add your other scripts here -->

</body>

</html>

