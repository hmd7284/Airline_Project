  <h2>Available Flights</h2>

  <% if (flights.length > 0) { %>
    <ul>
      <% flights.forEach(flight => { %>
        <li>
          <strong>Flight Code:</strong> <%= flight.flight_code %><br>
          <strong>Departure Time:</strong> <%= flight.departure_time %><br>
          <strong>Origin:</strong> <%= flight.origin %><br>
          <strong>Destination:</strong> <%= flight.destination %><br>
          <strong>Aircraft Code:</strong> <%= flight.aircraft_code %><br>
          <strong>Aircraft Name:</strong> <%= flight.aircraft_name %><br>
          <strong>Economy Price:</strong> <%= flight.economy_price %><br>
          <strong>Business Price:</strong> <%= flight.business_price %><br>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No flights found.</p>
  <% } %>

