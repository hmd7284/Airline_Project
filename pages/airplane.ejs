    <link href="https://fonts.googleapis.com/css?family=Pacifico|Paytone+One" rel="stylesheet">
    <link rel="stylesheet" href="admin/admin.css">
    <style>
      #flash-message {
        position: fixed;
        top: 120px;
        right: 10px;
        z-index: 9999;
      }
    </style>
  </head>

  <body>

    <!--NavBar-->
    <nav class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <a href="/home_admin" class="navbar-brand"> GDC AIRWAYS</a>
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
            data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
          </button>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class=" nav navbar-nav">
            <li><a href="home_admin"><strong>Home</strong></a></li>
            <li><a href="/airport"><strong>Airport</strong></a></li>
            <li class="active"><a href="#"><strong>Airplane</strong></a></li>
            <li><a href="/maintenance"><strong>Maintenance</strong></a></li>
            <li><a href="/route"><strong>Route</strong></a></li>
            <li><a href="/status"><strong>Status</strong></a></li>
            <li><a href="/schedule"><strong>Schedule</strong></a></li>
            <li><a href="/flight_time"><strong>Flight Time</strong></a></li>
            <li><a href="/staff"><strong>Staff</strong></a></li>
            <li><a href="/sales"><strong>Sales</strong></a></li>
            <li><a href="/revenue"><strong>Revenue</strong></a></li>
            <li><a href="/admin_logout"><strong>Logout</strong></a></li>
          </ul>
        </div>
      </div>
    </nav>
    <!--NavBar End-->
    <% if (message.success) { %>
      <div id="flash-message" class="alert alert-success" role="alert">
        <%= message.success %>
      </div>
      <% } else if (message.error) { %>
        <div id="flash-message" class="alert alert-danger" role="alert">
          <%= message.error %> 
        </div>
        <% } %>

          <h2 id="airplane">Airplane</h2>
          <form id="airplane-form" action="/airplane" method="post">
            <input type="hidden" name="action" value="add">
            <label for="aircraft_code">Code:</label>
            <input type="text" id="aircraftCode" name="aircraftCode">
            <br>
            <label for="addAircraftName">Name:</label>
            <input type="text" id="addAircraftName" name="aircraftName">
            <br>
            <label for="addCapacity">Capacity:</label>
            <input type="number" id="addCapacity" name="capacity">
            <label for="status">Status:</label>
            <select id="status" name="status">
              <option value="Active">Active</option>
              <option value="Inactive">Inactive</option>
            </select>
            <br>
            <br>
            <label for="mfdCom">Manufacturer:</label>
            <select id="mfdCom" name="mfdCom">
              <option value="Airbus">Airbus</option>
              <option value="Boeing">Boeing</option>
              <option value="Bombardier">Bombardier</option>
              <option value="Embraer">Embraer</option>
            </select>
            <br>
            <br>
            <label for="mfdDate">Manufactured date:</label>
            <input type="date" name="mfdDate">
            <button type="submit">Add Airplane</button>

          </form>

          <form class="airplane-form" action="/airplane" method="post">
            <input type="hidden" name="action" value="delete">
            <label for="deleteAircraftCode">Code:</label>
            <input type="text" id="deleteAircraftCode" name="aircraftCode">
            <button type="submit">Delete Airplane</button>
          </form>
          <script src="https://code.jquery.com/jquery-3.7.1.min.js"
            integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
          <script>
            $(document).ready(function () {
              $("#flash-message").delay(5000).fadeOut("slow");
            }); 
          </script>

  </body>

</html>
