<!DOCTYPE html>
<html>

  <head>
    <title>GDC Airways</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
      integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Pacifico|Paytone+One" rel="stylesheet">
    <link rel="stylesheet" href="admin/adminset.css">
    <style>
      #flash-message {
        position: fixed;
        top: 120px;
        right: 10px;
        z-index: 99999;
      }
    </style>
  </head>

  <body>

    <!--NavBar-->
    <nav class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <a href="/home_admin" class="navbar-brand"> GDC AIRWAYS</a>
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
            data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
          </button>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class=" nav navbar-nav">
            <li class="active"><a href="#"><strong>Home</strong></a></li>
            <li><a href="/user_about"><strong>About</strong></a></li>
            <li><a href="/user_contacts"><strong>Contacts</strong></a></li>
            <li><a href="/flight_search"><strong>Flight booking</strong></a></li>
            <li><a href="/booking_history"><strong>My Bookings</strong></a></li>re
            <!-- <li><a href="/fligh_page"><strong>Search `Flight</strong></a></li> -->
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="/user_profile"><strong>User Profile</strong></a></li>
            <li><a href="/user_logout"><strong>Logout</strong></a></li>
          </ul>

        </div>
      </div>
    </nav>
    <% if (message.success) { %>
      <div id="flash-message" class="alert alert-success" role="alert">
        <%= message.success %>
      </div>
      <% } else if (message.error) { %>
        <div id="flash-message" class="alert alert-danger" role="alert">
          <%= message.error %>
        </div>
        <% } %>
                    <div class="flex-container">
            <div class="form-container">
              <h2>Booking History</h2>
              <form action="/booking_history" method="get">
                <input type="hidden" name="action" value="search">
                <label for="startDate">Starting Date:</label>
                <input type="date" id="startDate" name="startDate" required>
                <label for="endDate">Ending Date:</label>
                <input type="date" id="endDate" name="endDate" required>
                <button type="submit">Search</button>
              </form>
            </div>
            <div class="table-container">
              <div class="content-container">
                <% transactions.forEach(transaction=> { %>
                  <!-- Transaction Information -->
                  <table>
                    <thead>
                      <tr>
                        <th>Transaction ID</th>
                        <th>Booking Date</th>
                        <th>Status</th>
                        <th>Discount</th>
                        <th>Total Amount</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td>
                          <%= transaction.transaction_id %>
                        </td>
                        <td>
                          <%= transaction.booking_date %>
                        </td>
                        <td>
                          <%= transaction.status %>
                        </td>
                        <td>
                          <%= transaction.discount %>
                        </td>
                        <td>
                          <%= transaction.total_amount %>
                        </td>
                        <td>
                          <form action="/booking_history/cancel/<%= transaction.transaction_id %>" method="post">
                            <button type="submit"
                              onclick="return confirm('Are you sure you want to cancel this booking?')">Cancel</button>
                          </form>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                  <!-- Order Details -->
                  <table>
                    <thead>
                      <tr>
                        <th>Order ID</th>
                        <th>Flight Code</th>
                        <th>Type</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% transaction.orders.forEach(order=> { %>
                        <tr>
                          <td>
                            <%= order.order_id %>
                          </td>
                          <td>
                            <%= order.flight_code %>
                          </td>
                          <td>
                            <%= order.type %>
                          </td>
                          <td>
                            <%= order.price %>
                          </td>
                          <td>
                            <%= order.quantity %>
                          </td>
                          <td>
                            <%= order.total %>
                          </td>
                          <td>
                    <form action="/booking_history/cancel/order/<%= order.order_id %>" method="post">
                      <button type="submit" onclick="return confirm('Are you sure you want to cancel this order?')">Cancel Order</button>
                    </form>
                  </td>
                        </tr>
                        <% }); %>
                    </tbody>
                  </table>
                  <% }); %>
              </div>
            </div>
          </div>
          <script src="https://code.jquery.com/jquery-3.7.1.min.js"
            integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
          <script>
            $(document).ready(function () {
              $("#flash-message").delay(5000).fadeOut("slow");
            }); 
          </script>

  </body>

</html>
