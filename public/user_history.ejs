    <section id="review" class="client">
      <div id="review">
        <h2>Search Flight</h2>
        <form action="/search" method="post">
          <div class="form__group">
            <div class="input__group">
              <input type="date" id="start_date" name="start_date" required/>
            </div>
            <p>Your departure?</p>
          </div>
          <div class="form__group">
            <div class="input__group">
              <input type="date" id="end_date" name="end_date" required/>
            </div>
            <p>To Date</p>
          </div>
          <button type="submit" class="btn"><i class="ri-search-line"></i></button>
        </form>
      </div>

        <table>
            <h2>Booking History</h2>
            <br>
            <thead>
                <tr>
                    <th>No</th>
                    <th>Order Code</th>
                    <th>From</th>
                    <th>To</th>
                    <th>Departure </th>
                    <th>Arrival</th>
                    <th>Type</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                <% flightHistory.forEach(history => { %>
                    <tr>
                        <td>No</td>
                        <td><%= history.order_code %></td>
                        <td><%= history.origin %></td>
                        <td><%= history.departure %></td>
                        <td><%= history.departure_date + history.departure_time %></td>
                        <td><%= history.arrival_date + history.arrival_time %></td>
                        <td><%= history.type %></td>
                        <td><%= history.price %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <br>
        <!-- Pagination links -->
        <div class="pagination">
            <% for (let i = 1; i <= pageCount; i++) { %>
                <a href="?page=<%= i %>"<%= i === currentPage ? ' style="font-weight: bold;"' : '' %>><%= i %></a>
            <% } %>
        </div>
    </section>

