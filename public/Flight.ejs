  <div class="flex-container">
  <div class="form-container">
  <form>
    <h2>Flight Schedule</h2>
    <br>
    <label for="flight_code">Code:</label>
    <input type="text" id="flight_code" name="flight_code">
    <br>
    <label for="departure_date">Departure Date:</label>
    <input type="date" id="departure_date" name="departure_date">
    <br>
    <label for="departure_time">Departure Time:</label>
    <input type="time" id="departure_time" name="departure_time">
    <br>
    <label for="arrival_date">Estimated Landing Date:</label>
    <input type="date" id="arrival_date" name="arrival_date">
    <br>
    <label for="arrival_time">Estimated Landing Time:</label>
    <input type="time" id="arrival_time" name="arrival_time">
    <br>
    <label for="aircraft">Airplane Code:</label>
    <input type="text" id="aircraft" name="aircraft">
    <br>
    <label for="route">Flight Route Code:</label>
    <input type="text" id="route" name="route">
    <br>
    <button type="submit">Add Flight</button>
    <button type="submit">Delete Flight</button>
</form>
<br>
<form>
    <h2>Adjust Flight Time</h2>
    <br>
    <label for="flight_code">Code:</label>
    <input type="text" id="flight_code" name="flight_code">
    <label for="departure_date">Departure Date:</label>
    <input type="date" id="departure_date" name="departure_date">
    <br>
    <label for="departure_time">Departure Time:</label>
    <input type="time" id="departure_time" name="departure_time">
    <br>
    <label for="arrival_date">Estimated Landing Date:</label>
    <input type="date" id="arrival_date" name="arrival_date">
    <br>
    <label for="arrival_time">Estimated Landing Time:</label>
    <input type="time" id="arrival_time" name="arrival_time">
    <br>
    <button type="submit">Adjust Flight Time</button>
</form>
  </div>
  <div class="table-container">
    <div class="content-container">
    <table>
        <h2>Flight Schedule Information</h2>
        <br>
        <thead>
            <tr>
                <th>Flight Code</th>
                <th>Departure Date</th>
                <th>Departure Time</th>
                <th>Arrival Date</th>
                <th>Arrival Time</th>
                <th>Aircraft</th>
                <th>Route</th>
            </tr>
        </thead>
        <tbody>
            <% flightSchedules.forEach(schedule => { %>
                <tr>
                    <td><%= schedule.flight_code %></td>
                    <td><%= schedule.departure_date %></td>
                    <td><%= schedule.departure_time %></td>
                    <td><%= schedule.arrival_date %></td>
                    <td><%= schedule.arrival_time %></td>
                    <td><%= schedule.aircraft %></td>
                    <td><%= schedule.route %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
<br>
    <!-- Pagination links -->
    <div class="pagination">
        <% for (let i = 1; i <= pageCount; i++) { %>
            <a href="?page=<%= i %>"<%= i === currentPage ? ' style="font-weight: bold;"' : '' %>><%= i %></a>
        <% } %>
    </div>
    </div>
  </div>
  </div>


</body>
